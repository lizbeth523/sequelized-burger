<div class="container">
	<div class="row">
		<header>
			<h1>Eat Da Burger!</h1>
		</header>
	</div>

	<div class="row burger-row">
		<div class="col-xs-12 col-md-6">
			<div class="card">
				<h4 class="card-header">Available Burgers</h4>
				<div class="card-block">
					<ol>
					  	{{#each burgers}}
					  		{{#unless devoured}}
							  	<li>
								    {{this.burger_name}}
								    <form action="/api/update?_method=PUT" method="POST">
								    	<input type="hidden" name="burger_id" value="{{id}}">
								    	<button class="btn btn-secondary" data-id="{{this.id}}">
								    		Devour it!
								    	</button>
						    		</form>
						    	</li>
						    {{/unless}}
					  	{{/each}}
					</ol>
				</div> <!-- end div class="card-block" -->
			</div> <!-- end div class="card" -->
		</div> <!-- end div class="col..." -->

		<div class="col-xs-12 col-md-6">
			<div class="card">
				<h4 class="card-header">Devoured Burgers</h4>
				<div class="card-block">
					<ol>
						{{#each burgers}}
							{{#if devoured}}
								<li>
									{{this.burger_name}}
								</li>
							{{/if}}								
						{{/each}}
					</ol>
				</div> <!-- end div class="card-block" -->
			</div> <!-- end div class="card" -->
		</div> <!-- end div class="col..." -->
	</div> <!-- end div class="row burger-row" -->

	<div class="card new-burger">
		<div class="card-block">
			<h4 class="card-title">Enter a burger you want to eat and then click Submit</h4>
			<form class="add-burger-form" action="/api/burgers" method="POST">
			  	<div class="form-group">
	    			<textarea class="form-control" id="new-burger" name="burger_name" placeholder="Yummy burger"></textarea>
	  			</div> <!-- end div class="form-group" -->
	  			<button id="btn-submit" type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div> <!--  end div class="card-block" -->
	</div> <!-- end div class="card" -->

</div> <!-- end div class="container" -->